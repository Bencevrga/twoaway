---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const {
  title = "TwoAway – Utazás okosan",
  description = "Egyedi útitervek, valós árak, kényelmes szervezés.",
} = Astro.props;

// Astro BASE_URL (lokálisan "/" , GitHub Pages-en "/twoaway")
const base = import.meta.env.BASE_URL || "/";
const normalizedBase = base.endsWith("/") ? base.slice(0, -1) : base;

// itt lesznek a képek: /img/...
const imgBase = `${normalizedBase}/img`;
---

<!DOCTYPE html>
<html lang="hu" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/svg+xml" href={`${imgBase}/favicon.svg`} />
    <meta property="og:image" content={`${imgBase}/og-twoaway.jpg`} />
  </head>

  <body
    class="relative min-h-screen text-slate-900"
    style={`background: url('${imgBase}/hero.jpg') center/cover fixed no-repeat;`}
  >
    {/* Háttér gradient az egész oldalra */}
    <div
      class="pointer-events-none absolute inset-0 z-0 bg-gradient-to-br from-brand/30 via-slate-900/80 to-sky-500/20"
    ></div>

    {/* Tartalom a gradient fölött: NAVBAR + PAGE + FOOTER */}
    <div class="relative z-10 flex min-h-screen flex-col">
      <Navbar />

      <main class="flex-1 pt-20 md:pt-24">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
