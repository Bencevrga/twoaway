---
interface OfferCardProps {
  title: string;
  subtitle?: string;
  image: string;
  badge?: string;
  tags?: string[];
}

const { title, subtitle, image, badge, tags = [] } =
  Astro.props as OfferCardProps;
---

<article
  class="relative group overflow-hidden rounded-3xl bg-slate-950/80 h-full max-h-[700px] border border-white/5 backdrop-blur-md shadow-xl transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl"
>
  <img
    src={image}
    alt={title}
    class="w-full h-full object-cover scale-105 group-hover:scale-110 transition-transform duration-500"
    loading="lazy"
  />

  <div
    class="absolute inset-0 bg-gradient-to-t from-slate-950/85 via-slate-950/50 to-transparent"
  />

  {badge && (
    <span
      class="absolute left-4 top-4 inline-flex items-center rounded-full bg-white/15 px-3 py-1 text-[11px] font-medium text-white backdrop-blur-md shadow-sm"
    >
      {badge}
    </span>
  )}

  <div class="absolute bottom-0 left-0 right-0 p-4 md:p-5">
    <h3 class="font-semibold leading-snug text-sm md:text-base text-white">
      {title}
    </h3>

    {subtitle && (
      <p class="mt-1 text-xs md:text-sm leading-snug text-white/90">
        {subtitle}
      </p>
    )}

    {tags.length > 0 && (
      <div class="mt-2 flex flex-wrap gap-3 text-[11px] text-white/80">
        {tags.map((tag: string) => (
          <span>{tag}</span>
        ))}
      </div>
    )}

    <span class="mt-3 inline-flex text-[11px] md:text-xs text-white/90">
      Részletek →
    </span>
  </div>
</article>
