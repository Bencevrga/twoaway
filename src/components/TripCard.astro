---
interface TripCardProps {
  title: string;
  days: number | string;
  price: number | string;
  image: string;
  href?: string;
  badge?: string;
  tags?: string[];
}

const {
  title,
  days,
  price,
  image,
  href = "#",
  badge,
  tags = [],
} = Astro.props as TripCardProps;
---

<article
  class="relative group rounded-2xl overflow-hidden bg-slate-950/75 border border-white/5 backdrop-blur-md shadow-md transition-transform duration-300 hover:-translate-y-1 hover:shadow-2xl"
>
  <a href={href} class="block h-full">
    {badge && (
      <span
        class="absolute left-3 top-3 z-10 inline-flex items-center rounded-full bg-white/15 px-3 py-1 text-[11px] font-medium text-white backdrop-blur"
      >
        {badge}
      </span>
    )}

    <div class="aspect-[4/3] overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
      <div
        class="pointer-events-none absolute inset-x-0 bottom-0 h-1/3 bg-gradient-to-t from-slate-950/80 via-slate-950/40 to-transparent"
      />
    </div>

    <div class="relative p-4 space-y-2 text-white">
      <h3 class="text-base sm:text-lg font-semibold leading-snug">
        {title}
      </h3>

      <div class="flex flex-wrap gap-3 text-[11px] sm:text-xs text-white/80">
        <span>‚è± {days} nap</span>
        <span>üí∂ kb. {price} EUR/f≈ë</span>
      </div>

      {tags.length > 0 && (
        <div class="mt-1 flex flex-wrap gap-2 text-[11px] text-white/75">
          {tags.map((tag: string) => (
            <span>{tag}</span>
          ))}
        </div>
      )}

      <span class="inline-flex text-brand text-sm mt-1">
        R√©szletek ‚Üí
      </span>
    </div>
  </a>
</article>
