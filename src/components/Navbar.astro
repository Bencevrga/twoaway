---
const base = import.meta.env.BASE_URL || "/";
const normalizedBase = base.endsWith("/") ? base.slice(0, -1) : base;
const imgBase = `${normalizedBase}/img`;
---

<header
  id="tw-header"
  class="fixed top-0 inset-x-0 flex items-center justify-center h-20 z-50
         transition-all duration-300 bg-black/20 backdrop-blur-sm border-b border-white/10"
>
  <div class="container flex items-center justify-center relative h-full">
    <!-- BAL OLDALT: LOGÓ + NÉV -->
    <a href={base} class="absolute left-0 flex items-center gap-3">
      <img
        src={`${imgBase}/logo.jpg`}
        alt="TwoAway logo"
        class="h-16 w-auto object-contain"
      />
    </a>

    <!-- KÖZÉPEN: NAV -->
    <nav class="flex items-center gap-8 text-sm text-white font-medium">
      <a href={base} class="hover:text-white/100">Főoldal</a>
      <a href="/twoaway/utak" class="hover:text-white/100">Utak</a>
      <a href="#" class="hover:text-white/100">Ebook</a>
      <a href="#" class="hover:text-white/100">Árak</a>
      <a href="#" class="hover:text-white/100">Partnerek</a>
      <a href="#" class="hover:text-white/100">Kapcsolat</a>
      <a href="#" class="hover:text-white/100">Blog</a>
      <a href="#" class="hover:text-white/100">Utasbiztosítás</a>
    </nav>
  </div>
</header>
