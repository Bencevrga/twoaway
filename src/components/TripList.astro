---
import OfferCard from "./OfferCard.astro";

const offers = [
  {
    title: "Völgyek, barlangok, hőlégballonok",
    subtitle: "Kappadókia, ***-os szállással, reggelivel",
    image:
      "https://images.unsplash.com/photo-1526481280695-3c687fd543c3?auto=format&fit=crop&w=1400&q=80",
  },
  {
    title: "1 hetes nyárkezdet Zakynthoson",
    subtitle: "***-os, medencés szállással",
    image:
      "https://images.unsplash.com/photo-1500375592092-40eb2168fd21?auto=format&fit=crop&w=1200&q=80",
  },
  {
    title: "Félpanziós nyaralás Törökországban",
    subtitle: "Kusadasi, indulás Bécsből, ***-os, medencés szállással",
    image:
      "https://images.unsplash.com/photo-1542909168-82c3e7fdca5c?auto=format&fit=crop&w=1200&q=80",
  },
  {
    title: "5 éjszakás mediterrán pihenés",
    subtitle: "Costa Blanca, ****-os szállással",
    image:
      "https://images.unsplash.com/photo-1526772662000-3f88f10405ff?auto=format&fit=crop&w=1200&q=80",
  },
  {
    title: "5 éjszaka a Tátra kapujában",
    subtitle: "Zakopane, bécsi indulással, hangulatos szállással",
    image:
      "https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?auto=format&fit=crop&w=1200&q=80",
  },
];
---

<section class="w-full py-16" id="offers">
  <div class="max-w-[1400px] mx-auto px-4">
    <div class="flex items-center justify-between mb-10">
      <h2 class="text-5xl font-bold text-center flex-1">
        Legfrissebb ajánlataink
      </h2>

      <a
        class="text-sm text-slate-600 hover:underline ml-4 whitespace-nowrap"
      >
        Hogyan számoljuk az árakat?
      </a>
    </div>

    <!-- GRID – négyzetes layout -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- NAGY 2x2 KÁRTYA -->
      <div class="col-span-2 row-span-2 aspect-square">
        <OfferCard {...offers[0]} />
      </div>

      <!-- 3 KIS NÉGYZET -->
      {offers.slice(1, 4).map((offer) => (
        <div class="aspect-square">
          <OfferCard {...offer} />
        </div>
      ))}

      <!-- JOBB ALSÓ – CTA NÉGYZET -->
      <div class="aspect-square">
        <a
          href="/utak"
          class="w-full h-full flex items-center justify-center bg-sky-600 hover:bg-sky-700 rounded-3xl text-white font-semibold text-lg cursor-pointer transition"
        >
          További ajánlatok →
        </a>
      </div>
    </div>
  </div>
</section>
