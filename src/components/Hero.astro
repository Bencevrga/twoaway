---
const {
  title = "Találd meg a következő álomutadat",
  subtitle = "Keretedhez és stílusodhoz szabott útitervek – valós árakkal.",
} = Astro.props;
---

<section class="relative h-dvh w-full flex flex-col items-center justify-center text-center">
  <div class="relative z-10 text-white max-w-3xl mx-auto px-4 text-center">
    <h1 class="text-4xl sm:text-6xl font-extrabold drop-shadow">
      {title}
    </h1>
    <p class="mt-4 text-lg sm:text-xl text-white/90">
      {subtitle}
    </p>
    <div class="mt-8 flex flex-wrap justify-center gap-3">
      <a
        href="#trips"
        class="inline-flex rounded-2xl bg-brand px-5 py-3 text-white hover:bg-brand-dark"
      >
        Böngészés
      </a>
      <a
        href="/contact"
        class="inline-flex rounded-2xl border border-white/40 px-5 py-3 text-white hover:bg-white/10"
      >
        Ajánlatkérés
      </a>
    </div>
  </div>
</section>
