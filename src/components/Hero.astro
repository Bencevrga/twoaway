---
const {
  title = 'Találd meg a következő álomutadat',
  subtitle = 'Keretedhez és stílusodhoz szabott útitervek – valós árakkal.',
  img = '/hero.jpg'
} = Astro.props;
---
<section class="relative h-dvh w-full flex flex-col items-center justify-center text-center">

  <header
  id="tw-header"
  class="fixed top-0 inset-x-0 flex items-center justify-center h-20 z-50
         transition-all duration-300 bg-black/20 backdrop-blur-sm border-b border-white/10"
>
  <div class="container flex items-center justify-center relative h-full">

    <!-- BAL OLDALT: LOGÓ + NÉV -->
    <a href="/" class="absolute left-0 flex items-center gap-3">
      <img src="/img/logo.jpg" alt="TwoAway logo" class="h-16 w-auto object-contain" />
    </a>

    <!-- KÖZÉPEN: NAV -->
    <nav class="flex items-center gap-8 text-sm text-white font-medium">
      <a href="/" class="hover:text-white/100">Főoldal</a>
      <a href="#" class="hover:text-white/100">Utak</a>
      <a href="#" class="hover:text-white/100">Ebook</a>
      <a href="#" class="hover:text-white/100">Árak</a>
      <a href="#" class="hover:text-white/100">Partnerek</a>
      <a href="#" class="hover:text-white/100">Kapcsolat</a>
      <a href="#" class="hover:text-white/100">Blog</a>
      <a href="#" class="hover:text-white/100">Utasbiztosítás</a>
    </nav>

  </div>
</header>

  <div class="relative z-10 text-white max-w-3xl mx-auto px-4 text-center">
    <h1 class="text-4xl sm:text-6xl font-extrabold drop-shadow">{title}</h1>
    <p class="mt-4 text-lg sm:text-xl text-white/90">{subtitle}</p>
    <div class="mt-8 flex flex-wrap justify-center gap-3">
      <a href="#trips" class="inline-flex rounded-2xl bg-brand px-5 py-3 text-white hover:bg-brand-dark">Böngészés</a>
      <a href="/contact" class="inline-flex rounded-2xl border border-white/40 px-5 py-3 text-white hover:bg-white/10">Ajánlatkérés</a>
    </div>
  </div>
</section>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("scroll", () => {
      const header = document.getElementById("tw-header");
      if (!header) return;

      if (window.scrollY > 40) {
        header.classList.add("scrolled");
      } else {
        header.classList.remove("scrolled");
      }
    });
  }
</script>
