---
import Base from "../layouts/Base.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import TripList from "../components/TripList.astro";
import AboutMini from "../components/AboutMini.astro";
import HowItWorks from "../components/HowItWorks.astro";
import WhyUs from "../components/WhyUs.astro";
import PremiumPricing from "../components/PremiumPricing.astro";
import Testimonials from "../components/Testimonials.astro";
import SocialSection from "../components/SocialSection.astro";

const base = import.meta.env.BASE_URL;
---

<Base title="TwoAway – Utazás okosan" description="Egyedi útitervek, valós árak, kényelmes szervezés.">
  <Navbar />

  <Hero img={`${base}img/hero.jpg`} />

  <TripList />

  <AboutMini />

  <HowItWorks />

  <WhyUs />

  <PremiumPricing />

  <Testimonials />

  <SocialSection />
</Base>
